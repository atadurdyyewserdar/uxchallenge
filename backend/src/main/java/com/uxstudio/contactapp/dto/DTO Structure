Authentication:
    Request:
        LoginRequest: userName, password
        TokenRequest: refreshToken

    Response:
        LoginResponse: id, email, userName, password, avatarUrl, Roles, fullName, accessToken, refreshToken
        TokenResponse: accessToken, refreshToken

User:
    Generic:
        # For displaying basic information in users table
        UserDetail: id, email, userName, password, fullName, avatarUrl, Roles, isActive, isLocked, createdAt, lastModified

    Request:
        # For updating profile information (for ROLE_USER)
        UpdateProfileRequest: userName, password, email, fullName

        # For updating user data for ROLE_ADMIN
        UpdateUserDetailRequest:

        # For admins
        CreateUserRequest: email, userName, password, fullName, avatarUrl

    Response:
        # Display user information
        ProfileResponse: id, email, userName, password, fullName, avatarUrl


Contact:
    Request:
        #
        ContactResponse: id, fullName, phoneNumber, email, createdAt, profileUrl, lastModified
    Request & Response:
        # This DTO can be used both for response and request
        ContactRequest: fullName, phoneNumber, email, profileUrl

    Response